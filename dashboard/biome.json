{
	"$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
	"files": {
		"includes": ["src/**"]
	},
	"linter": {
		"rules": {
			"suspicious": {
				"noExplicitAny": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"complexity": {
				"noUselessFragments": "off",
				"noBannedTypes": "off",
				"noStaticOnlyClass": "off"
			},
			"correctness": {
				"noUnusedImports": "warn",
				"noUnusedVariables": "warn",
				"noUnusedFunctionParameters": "warn"
			}
		}
	}
}
